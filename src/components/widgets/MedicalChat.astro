---
/**
 * MedicalChat — Embedded medical AI demo chat component
 *
 * Model: MedGemma 4B (cloud-based, NOT fine-tuned)
 * Purpose: Demonstration / evaluation only
 * This is NOT the on-prem MedCore Private AI deployment.
 *
 * - No personal data accepted
 * - No PHI processed
 * - No conversations stored
 */

import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
const chatApiUrl = import.meta.env.PUBLIC_CHAT_API_URL || '';
---

<WidgetWrapper id="medical-chat-demo" containerClass="max-w-4xl">
  <div class="text-center mb-6">
    <span
      class="inline-block px-3 py-1 mb-3 text-xs font-medium tracking-wider text-green-800 uppercase bg-green-100 rounded-full dark:bg-green-900/30 dark:text-green-300"
    >
      Live Demo
    </span>
    <h2 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl">Medical AI Demo</h2>
    <p class="mt-3 text-lg text-muted max-w-2xl mx-auto">
      This demo uses the cloud-based MedGemma 4B model for evaluation purposes only.
    </p>
  </div>

  <!-- Mandatory Disclaimer -->
  <div
    class="mb-6 p-4 rounded-lg border border-amber-300 bg-amber-50 dark:bg-amber-900/20 dark:border-amber-700"
    role="alert"
  >
    <div class="flex items-start gap-3">
      <svg
        class="w-5 h-5 text-amber-600 dark:text-amber-400 mt-0.5 flex-shrink-0"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"
        ></path>
      </svg>
      <p class="text-sm text-amber-800 dark:text-amber-200">
        <strong>This is a cloud-based MedGemma 4B demo model.</strong> It is not fine-tuned and does not process personal
        data. It does not provide medical diagnosis or treatment. For clinical decisions, consult a licensed physician.
      </p>
    </div>
  </div>

  <!-- Chat Container -->
  <div
    id="chat-container"
    class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-800/50 shadow-sm overflow-hidden"
  >
    <!-- Messages Area -->
    <div id="chat-messages" class="h-80 overflow-y-auto p-4 space-y-4">
      <!-- Welcome message -->
      <div class="flex gap-3">
        <div
          class="flex-shrink-0 w-8 h-8 rounded-full bg-green-100 dark:bg-green-900/40 flex items-center justify-center"
        >
          <svg class="w-4 h-4 text-green-700 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-2.47 2.47a2.25 2.25 0 01-1.59.659H9.06a2.25 2.25 0 01-1.59-.659L5 14.5m14 0V8.5a2.25 2.25 0 00-2.25-2.25h-1.5"
            ></path>
          </svg>
        </div>
        <div class="flex-1">
          <p class="text-xs font-medium text-green-700 dark:text-green-400 mb-1">MedGemma 4B Demo</p>
          <div class="text-sm text-gray-700 dark:text-gray-300">
            <p>
              Welcome. I am MedGemma 4B, a cloud-based medical language model running for <strong
                >demonstration purposes only</strong
              >.
            </p>
            <p class="mt-2">
              You can ask general medical questions using hypothetical or anonymized text. I provide educational
              information only — not diagnoses, prescriptions, or clinical decisions.
            </p>
            <p class="mt-2 text-xs text-muted">Demo limit: 5 queries per session</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Input Area -->
    <div class="border-t border-gray-200 dark:border-gray-700 p-4 bg-gray-50 dark:bg-slate-800/80">
      <form id="chat-form" class="flex gap-3" data-api-url={chatApiUrl}>
        <label for="chat-input" class="sr-only">Type your medical question</label>
        <input
          id="chat-input"
          type="text"
          placeholder="Ask a hypothetical medical question..."
          maxlength="2000"
          autocomplete="off"
          class="flex-1 px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-slate-700 text-sm text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition"
        />
        <button
          id="chat-submit"
          type="submit"
          class="px-5 py-2.5 rounded-lg bg-green-600 hover:bg-green-700 text-white text-sm font-medium transition disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
        >
          <span id="btn-text">Send</span>
          <svg
            id="btn-spinner"
            class="w-4 h-4 animate-spin hidden"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
          </svg>
        </button>
      </form>
      <p class="mt-2 text-xs text-muted" id="rate-limit-info">
        <span id="queries-remaining">5</span> queries remaining this session
      </p>
    </div>
  </div>

  <!-- Model transparency footer -->
  <div class="mt-4 text-center">
    <p class="text-xs text-muted">
      Model: MedGemma 4B &middot; Cloud-based &middot; Not fine-tuned &middot; Evaluation only &middot; Not MedCore
      Private AI&trade; on-prem
    </p>
  </div>
</WidgetWrapper>

<script>
  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('chat-form') as HTMLFormElement | null;
    const input = document.getElementById('chat-input') as HTMLInputElement | null;
    const messages = document.getElementById('chat-messages') as HTMLDivElement | null;
    const submitBtn = document.getElementById('chat-submit') as HTMLButtonElement | null;
    const btnText = document.getElementById('btn-text') as HTMLSpanElement | null;
    const btnSpinner = document.getElementById('btn-spinner') as HTMLElement | null;
    const remainingEl = document.getElementById('queries-remaining') as HTMLSpanElement | null;

    if (!form || !input || !messages || !submitBtn || !btnText || !btnSpinner || !remainingEl) return;

    const apiUrl = form.dataset.apiUrl || 'https://o5f3x5frhoaggxl7gmasxytlxq0eunav.lambda-url.eu-west-3.on.aws/';

    // Client-generated session ID stored in sessionStorage
    function getSessionId(): string {
      let sid = sessionStorage.getItem('medchat_session');
      if (!sid) {
        sid = crypto.randomUUID();
        sessionStorage.setItem('medchat_session', sid);
      }
      return sid;
    }

    let queriesUsed = 0;
    const MAX_QUERIES = 5;

    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function addMessage(role: 'user' | 'assistant' | 'error', content: string) {
      const wrapper = document.createElement('div');
      wrapper.className = 'flex gap-3';

      if (role === 'user') {
        wrapper.innerHTML = `
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-700 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-xs font-medium text-blue-700 dark:text-blue-400 mb-1">You</p>
            <p class="text-sm text-gray-700 dark:text-gray-300">${escapeHtml(content)}</p>
          </div>
        `;
      } else if (role === 'assistant') {
        wrapper.innerHTML = `
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-100 dark:bg-green-900/40 flex items-center justify-center">
            <svg class="w-4 h-4 text-green-700 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-2.47 2.47a2.25 2.25 0 01-1.59.659H9.06a2.25 2.25 0 01-1.59-.659L5 14.5m14 0V8.5a2.25 2.25 0 00-2.25-2.25h-1.5"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-xs font-medium text-green-700 dark:text-green-400 mb-1">MedGemma 4B Demo</p>
            <div class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-wrap">${escapeHtml(content)}</div>
          </div>
        `;
      } else {
        wrapper.innerHTML = `
          <div class="flex-shrink-0 w-8 h-8 rounded-full bg-red-100 dark:bg-red-900/40 flex items-center justify-center">
            <svg class="w-4 h-4 text-red-700 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm text-red-700 dark:text-red-400">${escapeHtml(content)}</p>
          </div>
        `;
      }

      messages!.appendChild(wrapper);
      messages!.scrollTop = messages!.scrollHeight;
    }

    function setLoading(loading: boolean) {
      submitBtn!.disabled = loading;
      input!.disabled = loading;
      btnText!.textContent = loading ? 'Thinking...' : 'Send';
      btnSpinner!.classList.toggle('hidden', !loading);
    }

    function updateRemaining() {
      const remaining = Math.max(0, MAX_QUERIES - queriesUsed);
      remainingEl!.textContent = String(remaining);
      if (remaining === 0) {
        submitBtn!.disabled = true;
        input!.disabled = true;
        input!.placeholder = 'Demo query limit reached';
      }
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const message = input!.value.trim();
      if (!message) return;
      if (queriesUsed >= MAX_QUERIES) return;

      addMessage('user', message);
      input!.value = '';
      setLoading(true);

      try {
        const response = await fetch(apiUrl, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-Session-ID': getSessionId(),
          },
          body: JSON.stringify({ message }),
        });

        const data = await response.json();

        if (!response.ok) {
          addMessage('error', data.error || 'An error occurred. Please try again.');
          if (response.status === 429) {
            queriesUsed = MAX_QUERIES;
            updateRemaining();
          }
        } else {
          queriesUsed++;
          updateRemaining();
          addMessage('assistant', data.reply);
        }
      } catch {
        addMessage('error', 'Network error. Please check your connection and try again.');
      } finally {
        setLoading(false);
        input!.focus();
      }
    });
  });
</script>
