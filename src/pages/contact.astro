---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
  description: 'Get in touch with Futurion Solutions. Questions about compliance-first AI automation for your healthcare practice? We respond within 24 business hours.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText -->

  <HeroText
    tagline="Contact Us"
    title="Let's Talk About Your Practice"
    subtitle="Have questions about compliance-first AI automation? Want to learn how we can help your healthcare practice save time while staying compliant? We'd love to hear from you."
  />

  <ContactUs
    id="form"
    title="Send us a message"
    subtitle="Whether you have a question about our services, want to discuss your practice's needs, or are ready to book a free AI audit — drop us a line."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Your Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email Address',
      },
      {
        type: 'text',
        name: 'practice_name',
        label: 'Practice Name (optional)',
      },
      {
        type: 'text',
        name: 'inquiry_type',
        label: 'Inquiry Type (e.g., Free AI Audit, Services, General Question)',
      },
    ]}
    textarea={{
      label: 'Your Message',
      name: 'message',
      placeholder: 'Tell us about your practice and how we can help...',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to the collection of your information for the purpose of responding to your inquiry. Your data is processed in accordance with our Privacy Policy and GDPR requirements.',
    }}
    button="Send Message"
    description="We respond within 24 business hours."
  />

  <!-- Contact Info -->

  <Features2
    title="Other ways to reach us"
    items={[
      {
        title: 'Free AI Audit',
        description:
          'Ready to get started? Book your free 5-7 day AI compliance audit directly on our dedicated page.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'LinkedIn',
        description: 'Connect with us on LinkedIn for compliance insights and updates.',
        icon: 'tabler:brand-linkedin',
      },
      {
        title: 'Location',
        description: 'Valencia, Spain — Serving healthcare practices across Spain and the EU.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
